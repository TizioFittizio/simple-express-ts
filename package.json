{
  "name": "simple-express-ts",
  "version": "2.1.4",
  "description": "Express with Typescript decorators, without the bells and whistles",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Luca Campana",
  "repository": "https://github.com/TizioFittizio/simple-express-ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "npm run build && jest",
    "start": "npm run build && node build/example/index.js"
  },
  "dependencies": {
    "@types/express": "^4.17.6",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/supertest": "^2.0.8",
    "body-parser": "^1.19.0",
    "jest": "^25.4.0",
    "simple-express-ts": "^2.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
